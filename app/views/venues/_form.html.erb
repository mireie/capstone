<%= form_with(model: venue) do |form| %>
  <% if venue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(venue.errors.count, "error") %> prohibited this venue from being saved:</h2>
      <ul>
        <% venue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col">
      <%= form.label "Venue Name", class:"form-label" %>
      <%= form.text_field :name, class:"form-control mb-3" %>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <%= form.label :street_address, class:"form-label" %>
            <%= form.text_field :street_address, class:"form-control mb-3" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= form.label :city, class:"form-label" %>
            <%= form.text_field :city, class:"form-control mb-3" %>
          </div>
          <div class="col-md-3">
            <%= form.label :state, class:"form-label" %>
            <%= form.text_field :state, class:"form-control mb-3" %>
          </div>
          <div class="col-md-3">
            <%= form.label :zip_code, class:"form-label" %>
            <%= form.text_field :zip_code, class:"form-control mb-3" %>
          </div>
        </div>
      </div>
      <%= form.label :website, class:"form-label" %>
      <%= form.text_field :website, class:"form-control mb-3" %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
